<?xml version="1.0" encoding="utf-8"?>
<com.lcr.widget.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fra_home_ptrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/refresh_head" />


    <com.lcr.widget.StaggeredGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:column_count="@integer/grid_column_count"
        app:item_margin="8dp"
         />

    <include layout="@layout/load_more" />

</com.lcr.widget.PullToRefreshLayout>